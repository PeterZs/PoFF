#include <fstream>
#include <string>

#ifndef DATA_FILE_HPP
#define DATA_FILE_HPP

class DataFile {
public:
  static DataFile *DATA;

  std::ofstream vel_file;
  std::ofstream med_vel_file;
  std::ofstream quant_vel_file;
  std::ofstream all_vel_file;
  std::ofstream compression_file;
  std::ofstream nb_compressions_file;
  std::ofstream time_tris_file;
  std::ofstream time_file;
  std::ofstream nb_tris_file;
  std::ofstream sound_file;

  bool write_velocities;
  bool write_compressions;
  bool write_times;
  bool write_sound;
  
  DataFile();
  void init();
  void close();

  private : 
  bool open;
};

#endif // DATA_FILE_HPP
